{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": ["/*"],
            "@config/*": ["config/*"],
            "@shared/*": ["modules/shared/*"],
            "@main/*": ["modules/main/*"],
            "@brand/*": ["modules/brand/*"],
            "@bid/*": ["modules/bid/*"],
            "@system/*": ["modules/system/*"],
            "@images/*": ["assets/images/*"],
            "@icons/*": ["assets/icons/*"],
            "@utils/*": ["utils/*"],
            "@styles/*": ["styles/*"]
        }
    },
    "include": ["src", "./src/declaration.d.ts"],
    "exclude": ["node_modules", "build"]
}
